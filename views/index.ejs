<%- include ('partials/header.ejs')%>
<body>
    <%- include ('partials/navbar.ejs')%>
    <div class="container">
        <br>
        <h1>Perguntas</h1>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>

                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id%>"><button class="btn btn-primary">Visualizar</button></a>
                </div>

            </div>
        <%})%>
        <br>
        <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <br><br>
    </div>
</body>
<%- include ('partials/footer.ejs')%>