<%- include ('partials/header.ejs')%>

<body>
    <%- include ('partials/navbar.ejs')%>
    <div class="container">
        <h1>
            <%= pergunta.titulo %>
        </h1>
        <p>
            <%= pergunta.descricao %>
        </p>

        <form method="POST" action="/responder">
            <h3>Resposta</h3>
            <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-success">Enviar</button>
            <br><br>
        </form>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %><br>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs')%>
